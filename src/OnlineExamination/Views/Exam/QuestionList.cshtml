                <div class="modal fade" id="editquestionmodel" style="display:none">
                    <!-- Modal content-->
                    <div class="modal-dialog" style="background-color:cadetblue">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Edit Question</h4>
                        </div>
                        <form>
                            <div class="modal-body" style="background-color:gray">
                                <div class="form-group">
                                    <label>Add Question:</label>
                                    <input type="text" id="txtqueID" hidden />
                                    <textarea class="form-control" rows="5" id="txtQuestion" name="ObjectiveQue" width="80%"></textarea>
                                    <br />
                                </div>
                                <p>
                                    <select id="StudentYear" class="form-control" name="Year">
                                        <option value="0">Select Year</option>
                                        <option value="1">1st Year</option>
                                        <option value="2">2nd Year</option>
                                        <option value="3">3rd Year</option>


                                    </select>
                                    <span id="validexamyear" style="color:red"></span>

                                </p>

                                <p>
                                    <div class="form-group">
                                        <select id="Programme" class="form-control" name="Programme">
                                            <option value="0">Select Programme</option>
                                            <option value="BSC Computing">BSC Computing</option>
                                            <option value="BSC Networking">BSC Networking</option>
                                            <option value="BSC Multimedia">BSC Multimedia</option>
                                        </select>
                                        <span id="validprogramme" style="color:red"></span>
                                    </div>
                                </p>
                                <div class="form-group">
                                    <label for="pwd">Choose Subject:</label>
                                    <div>
                                        <select id="SubjectID" class="form-control-lg" name="SubjectID"></select>
                                    </div>

                                </div> 
                                <div class="">
                                    <label>Correct Answer:</label>
                                    <div class="">
                                        <label class="form-control"><input type="radio" id="Status1" name="Status"><input type="text" id="AnswerID1" hidden><input type="text" id="Answer1" placeholder="Option 1"></label>
                                    </div>
                                    <div class="">
                                        <label class="form-control"><input type="radio" id="Status2" name="Status"><input type="text" id="AnswerID2" hidden><input type="text" id="Answer2" placeholder="Option 2"></label>
                                    </div>
                                    <div class="">
                                        <label class="form-control"><input type="radio" id="Status3" name="Status"><input type="text" id="AnswerID3" hidden><input type="text" id="Answer3" placeholder="Option 3"></label>
                                    </div>
                                    <div class="">
                                        <label class="form-control"><input type="radio" id="Status4" name="Status"><input type="text" id="AnswerID4" hidden><input type="text" id="Answer4" placeholder="Option 4"></label>
                                    </div>


                                </div>
                                <div class="form-actions">
                                    <button type="button" id="btnUpdate" style="background-color:forestgreen;color:white" class="btn btn-primary">Update Question</button>
                                    <button type="button" class="btn btn-danger" style="background-color:red;color:white" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </form>


                    </div>

                </div>
