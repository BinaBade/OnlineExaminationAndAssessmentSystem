<body>
    @using (Html.BeginForm())
    {
        <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="content">
                            <p>
                                <div class="form-group">
                                    <select id="StudentYear" class="form-control" name="Year">
                                        <option value="0">Select Year</option>
                                        <option value="1">1st Year</option>
                                        <option value="2">2nd Year</option>
                                        <option value="3">3rd Year</option>
                                    </select>
                                    <span id="validyear" style="color:red"></span>
                                </div>
                            </p>

                            <p>
                                <select id="Programme" class="form-control" name="Programme">
                                    <option value="0">Select Programme</option>
                                    <option value="BSC Computing">BSC Computing</option>
                                    <option value="BSC Networking">BSC Networking</option>
                                    <option value="BSC Multimedia">BSC Multimedia</option>
                                </select>
                            </p>
                            <div><span id="spanerror" style="color:red"></span></div>


                            <p>
                                <div class="form-group">
                                    <label for="pwd">Choose Subject:</label>
                                    <div class="">
                                        <select id="SubjectID" class="form-control" name="SubjectID"></select>
                                    </div>
                                </div>
                            </p> <br />
                            <div class="form-group">
                                <label for="usr">Add Question</label>
                                <textarea class="form-control" rows="5" id="txtSubectiveQuestion" name="SubjectiveQue"></textarea>
                                <br />
                                <div>
                                    <span id="spanSubjectiveQues"></span>
                                </div>

                                <div class="form-actions">
                                    <button type="button" id="btnAddSubjectiveQuestion" class="btn btn-info btn-fill">Add Question</button>

                                </div>
                            </div>

                        </div>
                        </div>
                    </div>
                </div>
            

      



    }

    <script>
        $(function () {
            $(this).feedback({

                SucessMsg: '',
                ServiceRootPath: 'http://localhost:49613/'


            });
        });
    </script>
</body>