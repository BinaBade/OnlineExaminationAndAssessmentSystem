<script src="~/js/DataTable/jquery.dataTables.min.js"></script>
<script src="~/js/ExamJS/SubjectScript.js"></script>
@*<script src="~/js/bootstrap.js"></script>*@
<script src="~/js/ExamJS/json2.min.js"></script>


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="content">
                <!-- Modal content-->
                <form id="subjectAdd">

                    <p>
                        <div class="form-group">
                            <select id="StudentYear" class="form-control" name="Year">
                                <option value="0">Select Year</option>
                                <option value="1">1st Year</option>
                                <option value="2">2nd Year</option>
                                <option value="3">3rd Year</option>
                            </select>
                            <span id="validyear" style="color:red"></span>
                        </div>
                    </p>
                    <p>
                        <div class="form-group">
                            <select id="Programme" class="form-control" name="Programme">
                                <option value="0">Select Programme</option>
                                <option value="BSC Computing">BSC Computing</option>
                                <option value="BSC Networking">BSC Networking</option>
                                <option value="BSC Multimedia">BSC Multimedia</option>
                            </select>
                        </div>
                    </p>
                    <div><span id="spanerror" style="color:red"></span></div>

                    <div class="form-group">
                        <label for="pwd">Add Subject:</label>
                        <div>
                            <input class="form-control" type="text" id="txtsubject" placeholder="Subject Name" />
                        </div>
                        <div><span id="validsubject" style="color:red"></span></div>

                    </div>

                    <div class="form-actions">
                        <button type="button" id="btnAddSubject" class="btn btn-info btn-fill">Add Subject</button>

                    </div>

                </form><br /><br />
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="content">

                <h3 align="center">Subject List</h3>

                <div class="table" style="border:outset; color:black">
                    <table id="tblsubject" class="table-striped">
                        <thead>
                            <tr>
                                <th>S.N.</th>
                                <th>Subject</th>
                                <th>Year</th>
                                <th>Programme</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="editsubjectmodal" style="display:none">
    <!-- Modal content-->
    <div class="modal-dialog" style="border:thick;border-color:dimgray;background-color:dimgrey">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Edit Subject</h4>
        </div>
        <form>
            <p>
                <div class="form-group">
                    <select id="StudentYearEdit" class="form-control" name="Year">
                        <option value="0">Select Year</option>
                        <option value="1">1st Year</option>
                        <option value="2">2nd Year</option>
                        <option value="3">3rd Year</option>
                    </select>
                    <span id="validyear" style="color:red"></span>
                </div>
            </p>
            <p>
                <div class="form-group">
                    <select id="ProgrammeEdit" class="form-control" name="Programme">
                        <option>Select Programme</option>
                        <option value="BSC Computing">BSC Computing</option>
                        <option value="BSC Networking">BSC Networking</option>
                        <option value="BSC Multimedia">BSC Multimedia</option>
                    </select>
                </div>
            </p>
            <div><span id="spanerror" style="color:red"></span></div>

            <div class="form-group">
                <label for="pwd">Add Subject:</label>
                <div>
                    <input type="text" id="txtsubjectID" hidden />
                    <input class="form-control" type="text" id="txtsubjectEdit" placeholder="Subject Name" />
                </div>
                <div><span id="validsubject" style="color:red"></span></div>

            </div>

            <div class="form-actions">
                <button type="button" id="btnUpdateSubject" class="btn btn-info btn-fill">Update Subject</button>
                <button type="button" class="btn btn-danger" style="background-color:red;color:white" data-dismiss="modal">Close</button>
            </div>

        </form><br /><br />
    </div>
</div>
