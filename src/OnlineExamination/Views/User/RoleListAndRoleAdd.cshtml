<script src="~/js/ExamJS/json2.min.js"></script>



<body>
    @using (Html.BeginForm())
    {
        <div class="container-fluid">
            <div class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="content">
                                <button type="button" id="btnshowmodal" class="btn btn-info btn-fill" data-target="#AddNewRole" data-toggle="modal">ADD New Role</button>
                               
                                
                            </div>
                        </div>
                        <div class="card">
                            <div class="content">
                                <div class="container-fluid">
                                    <div>
                                        <p align="center">Role List</p>
                                    </div>
                                    <div class="table-active table-bordered">
                                        <table id="tblRoleList" class="table"></table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @using (Html.BeginForm())
    {
        <div class="modal fade" id="AddNewRole">
            <!-- Modal content-->
            <div class="modal-dialog">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">User Role</h4>
                </div>
                <form>
                    <div class="modal-body" style="background-color:gainsboro">
                        <div class="row-fluid">
                            <label class="control-label">Roles</label>
                            <input class="form-control" type="text" id="txtroles" placeholder="Roles" name="Roles" required />

                        </div>
                    </div>

                    <div><span id="spanerror" style="color:red"></span></div>

                    <div class="form-actions">
                        <button type="button" id="btnAddRole" class="btn btn-primary">Add Role</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>


    }
    <script>
        $(function () {
            $(this).feedback({
                SucessMsg: '',
                ServiceRootPath: 'http://localhost:49613/'
            });
        });
    </script>
</body>

